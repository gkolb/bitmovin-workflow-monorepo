{
  "name": "player",
  "scripts": {
    "dev": "vite",
    "build": "vite build"
  },
  "type": "module",
  "nx": {
    "targets": {
      "serve": {
        "executor": "@nx/vite:dev-server",
        "options": {
          "buildTarget": "player:build"
        }
      },
      "build": {
        "executor": "@nx/vite:build",
        "outputs": [
          "{workspaceRoot}/dist/apps/player"
        ]
      }
    }
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "tailwindcss": "^4.1.11"
  }
}
